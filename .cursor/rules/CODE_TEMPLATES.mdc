### Actions Abstraction
**File**: `resources/js/lib/actions.ts`

```typescript
import { Effect } from 'effect';

// Schemas for type safety
export const TaskSchema = S.Struct({
    id: S.String,
    title: S.String,
    description: S.Union(S.String, S.Null),
    is_completed: S.Boolean,
    due_date: S.Union(S.String, S.Null),
    created_at: S.String,
    updated_at: S.String,
});

// Actions object with Effect-based API calls
export const Actions = {
    getTasks: Effect.gen(function* () {
        const api = yield* ApiClient;
        const route = ShowTasks.url();

        const response = yield* api.get(route);
        const tasks = yield* S.decode(TaskSchema, response.data);

        return { tasks };
    }).pipe(/* error handling */),

    createTask: (data: CreateTaskRequest) => Effect.gen(function* () {
        const api = yield* ApiClient;
        const route = CreateTask.url();

        const response = yield* api.post(route, data);
        const task = yield* S.decode(TaskSchema, response.data);

        return { task, message: response.message };
    }).pipe(/* error handling */),
};
```

